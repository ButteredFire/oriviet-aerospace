---
interface Props {
  title?: string;
}
const { title } = Astro.props;

const pageTitle = title ? `${title} | Oriviet Aerospace` : 'Oriviet Aerospace';

import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
