<style>
    .background-main {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-section {
		position: relative; /* Needed for absolute positioning of children */
		width: 100%;
		height: calc(100vh - 64px); /* Full viewport height minus header height (h-16) */
		overflow: hidden; /* Ensures image and overlay don't spill */
		display: flex;
		align-items: center;
        vertical-align: middle;
        justify-content: center;
		text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.5); /* Adds readability to text */
	}

    .hero-content {
        display: flex;
        flex-direction: column;
		align-items: center;
        vertical-align: middle;
    }

    .background-preview {
        position: absolute;
    }
    .top-left {
		top: 0;
		left: 0;
    }
    .bottom-right {
        bottom: 0;
        right: 0;
    }
</style>